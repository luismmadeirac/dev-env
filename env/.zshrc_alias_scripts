# v2
alias bg="$HOME/.local/scripts/switch-bg.sh"
alias bo="$HOME/.local/scripts/bg-black.sh"
alias batman="$HOME/.local/scripts/batman.sh"

alias mi1="LC_ALL=C tr -dc '[:graph:]' < /dev/urandom | head -c 12"
alias mi5="LC_ALL=C tr -dc '[:graph:]' < /dev/urandom | head -c 36 | pbcopy && echo 'Password copied to clipboard!'"


# OS Mac Scripts
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias dark="osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to true'"
alias light="osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to false'"


# Tools
alias check-versions="$HOME/.local/scripts/dev-tooling.sh"
